<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="MigthierAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppThemeNoActionBar.FullScreen" parent="AppThemeNoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppThemeNoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="FullscreenTheme.Primary" parent="FullscreenTheme">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TitleActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ExpandedAppBar">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RobotoRegularTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorH1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>


    <style name="cardListTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorH2</item>
        <item name="android:textViewStyle">@style/RobotoMediumTextViewStyle</item>
    </style>

    <style name="cardSubItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mediumGrey</item>
        <item name="android:textViewStyle">@style/fontRobotoLight</item>
    </style>

    <style name="cardAmount">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorH2</item>
        <item name="android:textViewStyle">@style/RobotoMediumTextViewStyle</item>
    </style>

    <style name="BrandButton">
        <item name="android:elevation">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BrandButton.Positive" parent="BrandButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BrandButton.Negative" parent="BrandButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BrandButton.BorderOnly" parent="BrandButton">
        <item name="android:textColor">@color/colorPrimaryLightDark</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BrandButton.Transparent" parent="BrandButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="BrandButton.PaddingLess" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CircleProgress" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>

        <item name="colorControlNormal">@color/mediumGrey</item>
        <item name="colorControlActivated">#009688</item>
        <item name="colorControlHighlight">@color/mediumGrey</item>
    </style>

    <style name="textInputEditText">
        <item name="android:textColor">@color/charcoalGrey</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="textHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/mediumGrey</item>
    </style>

    <style name="textErrorHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/mediumRed</item>
    </style>

    <style name="textStyleH1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleH2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorH2</item>
        <item name="android:textViewStyle">@style/RobotoMediumTextViewStyle</item>
    </style>

    <style name="textStyleH3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textViewStyle">@style/RobotoMediumTextViewStyle</item>
    </style>

    <style name="textBody1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
    </style>

    <style name="textBody2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
        <item name="android:textViewStyle">@style/RobotoRegularTextViewStyle</item>
    </style>

    <style name="textLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mediumGrey</item>
        <item name="android:textViewStyle">@style/RobotoMediumTextViewStyle</item>
    </style>

    <style name="textSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/mediumGrey</item>
        <item name="android:textViewStyle">@style/RobotoMediumTextViewStyle</item>
    </style>
    //Font families

    <style name="RobotoRegularTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoMediumTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="fontRobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionBar_Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.MaterialProgressBar.CustomProgressBar" parent="android:Widget.Material.ProgressBar">
        <!-- We have support for determinate circular progress drawable. -->
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:maxWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
</resources>
